{
  "app": {
    "background": {
      "scripts": [ "background.js" ]
    }
  },

  "manifest_version": 2,
  "name": "Serial console for BBC micro:bit",
  "version": "1.0",
  "author": "Microsoft Corporation",
  "short_name": "micro:bit serial",

  "description": "This extension re-routes the BBC micro:bit's serial output to Chrome.",
  "icons": {
    "48": "logo48.png",
    "128": "logo128.png"
  },

  "permissions": [
    "serial",
    "usb"
  ],

  "externally_connectable": {
    "matches": [ "https://*.microbit.co.uk/*", "https://*.touchdevelop.com", "*://localhost/*" ]
  }
}
